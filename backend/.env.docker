# Environment variables for EDMS Backend - Docker Configuration
# Este archivo est√° configurado para usar MySQL en Docker

# Database Configuration - Docker MySQL
DATABASE_URL=mysql+pymysql://edms_user:edms_password123@localhost:3306/edms_db
DB_HOST=localhost
DB_PORT=3306
DB_USER=edms_user
DB_PASSWORD=edms_password123
DB_NAME=edms_db

# Security
SECRET_KEY=edms-super-secret-key-2024-change-in-production-abc123xyz789
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME=EDMS API
APP_VERSION=1.0.0
DEBUG=True

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,png,jpg,jpeg,gif

# OCR Configuration
TESSERACT_PATH=tesseract  # Path to tesseract executable
OCR_LANGUAGES=eng,spa     # Supported OCR languages

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis (for background tasks) - Optional
REDIS_URL=redis://localhost:6379/0

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:5173"]

# Docker MySQL Commands (for reference)
# Start MySQL: docker start mysql-edms
# Stop MySQL: docker stop mysql-edms  
# View logs: docker logs mysql-edms
# Connect to MySQL: docker exec -it mysql-edms mysql -u edms_user -p